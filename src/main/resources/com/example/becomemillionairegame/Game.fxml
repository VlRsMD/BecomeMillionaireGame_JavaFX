   <Text fx:id="result" layoutX="80.0" layoutY="440.0" textAlignment="CENTER" wrappingWidth="296.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <Button fx:id="nextButton" layoutX="315.0" layoutY="500.0" onAction="#handleMoveToNextQuestionAction" prefWidth="80.0" text="Next" textAlignment="CENTER" />
</Pane>
