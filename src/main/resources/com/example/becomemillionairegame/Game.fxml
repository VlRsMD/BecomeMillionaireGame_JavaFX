<Pane prefHeight="620.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.becomemillionairegame.Controller">
   <Text fx:id="question" layoutX="80.0" layoutY="100.0" textAlignment="CENTER" wrappingWidth="296.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <Button fx:id="option1Button" layoutX="62.0" layoutY="140.0" onAction="#handleChooseAnswerOption1Action" prefWidth="155.0" />
   <Button fx:id="option2Button" layoutX="62.0" layoutY="205.0" onAction="#handleChooseAnswerOption2Action" prefWidth="155.0" />
   <Button fx:id="option3Button" layoutX="255.0" layoutY="140.0" onAction="#handleChooseAnswerOption3Action" prefWidth="155.0" />
   <Button fx:id="option4Button" layoutX="255.0" layoutY="205.0" onAction="#handleChooseAnswerOption4Action" prefWidth="155.0" />
   <Text fx:id="helpText" layoutX="180.0" layoutY="290.0" text="Help options:" textAlignment="CENTER" wrappingWidth="90.0" />
   <Button fx:id="askAudienceButton" layoutX="62.0" layoutY="310.0" onAction="#displayAskAudienceHelpOption" prefHeight="25.0" prefWidth="140.0" text="Ask the audience" />
   <Button fx:id="phoneFriendButton" layoutX="255.0" layoutY="310.0" onAction="#displayPhoneFriendHelpOption" prefHeight="25.0" prefWidth="140.0" text="Phone a friend" />
